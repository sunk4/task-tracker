  "components": {
    "schemas": {
      "TaskRequest": {
        "required": ["description", "dueDate", "name", "priority", "projectId", "status"],
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "maxLength": 255, "minLength": 0, "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" },
          "priority": { "type": "string" },
          "dueDate": { "type": "string", "format": "date-time" },
          "projectId": { "type": "string", "format": "uuid" },
          "changeDescription": { "type": "string" },
          "userId": { "type": "string", "format": "uuid" }
        }
      },
      "ProjectRequest": {
        "required": ["description", "name", "ownerId"],
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "startDate": { "type": "string", "format": "date-time" },
          "endDate": { "type": "string", "format": "date-time" },
          "projectCover": { "type": "string" },
          "isOpen": { "type": "boolean" },
          "ownerId": { "type": "string", "format": "uuid" },
          "userProjectIds": { "type": "array", "items": { "type": "string", "format": "uuid" } },
          "taskIds": { "type": "array", "items": { "type": "string", "format": "uuid" } },
          "participantIds": { "type": "array", "items": { "type": "string", "format": "uuid" } }
        }
      },
      "ParticipantIdsRequest": {
        "required": ["participantIds"],
        "type": "object",
        "properties": { "participantIds": { "type": "array", "items": { "type": "string", "format": "uuid" } } }
      },
      "ProjectResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "startDate": { "type": "string", "format": "date-time" },
          "endDate": { "type": "string", "format": "date-time" },
          "projectCover": { "type": "string", "format": "byte" },
          "owner": { "$ref": "#/components/schemas/UserDTO" },
          "userProjects": { "type": "array", "items": { "$ref": "#/components/schemas/UserProjectDTO" } },
          "tasks": { "type": "array", "items": { "$ref": "#/components/schemas/TaskDTO" } },
          "participants": { "type": "array", "items": { "$ref": "#/components/schemas/UserDTO" } },
          "open": { "type": "boolean" }
        }
      },
      "TaskDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "dueDate": { "type": "string", "format": "date-time" },
          "status": { "type": "string" },
          "priority": { "type": "string" },
          "user": { "$ref": "#/components/schemas/UserDTO" },
          "project": { "$ref": "#/components/schemas/ProjectResponse" }
        }
      },
      "UserDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "fullName": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "UserProjectDTO": { "type": "object" },
      "CommentRequest": {
        "required": ["comment", "taskId"],
        "type": "object",
        "properties": { "comment": { "type": "string" }, "taskId": { "type": "string", "format": "uuid" } }
      },
      "RegistrationRequest": {
        "required": ["email", "firstname", "lastname", "password"],
        "type": "object",
        "properties": {
          "firstname": { "type": "string" },
          "lastname": { "type": "string" },
          "email": { "type": "string" },
          "password": { "maxLength": 2147483647, "minLength": 8, "type": "string" }
        }
      },
      "LoginRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": { "email": { "type": "string" }, "password": { "type": "string" } }
      },
      "AuthenticationResponse": {
        "type": "object",
        "properties": { "token": { "type": "string" }, "roles": { "type": "array", "items": { "type": "string" } } }
      },
      "CommentResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "comment": { "type": "string" },
          "taskId": { "type": "string", "format": "uuid" },
          "createdAt": { "type": "string", "format": "date-time" },
          "createdBy": { "$ref": "#/components/schemas/UserDTO" }
        }
      },
      "UsersRoleRequest": {
        "type": "object",
        "properties": {
          "userId": { "type": "string", "format": "uuid" },
          "roleId": { "type": "string", "format": "uuid" }
        }
      },
      "PageResponseTaskDTO": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/TaskDTO" } },
          "pageNum": { "type": "integer", "format": "int32" },
          "pageSize": { "type": "integer", "format": "int32" },
          "count": { "type": "integer", "format": "int64" },
          "totalPages": { "type": "integer", "format": "int32" }
        }
      },
      "PageResponseProjectResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/ProjectResponse" } },
          "pageNum": { "type": "integer", "format": "int32" },
          "pageSize": { "type": "integer", "format": "int32" },
          "count": { "type": "integer", "format": "int64" },
          "totalPages": { "type": "integer", "format": "int32" }
        }
      },
      "PageResponseCommentResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/CommentResponse" } },
          "pageNum": { "type": "integer", "format": "int32" },
          "pageSize": { "type": "integer", "format": "int32" },
          "count": { "type": "integer", "format": "int64" },
          "totalPages": { "type": "integer", "format": "int32" }
        }
      },
      "PageResponseUsersRoleResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/UsersRoleResponse" } },
          "pageNum": { "type": "integer", "format": "int32" },
          "pageSize": { "type": "integer", "format": "int32" },
          "count": { "type": "integer", "format": "int64" },
          "totalPages": { "type": "integer", "format": "int32" }
        }
      },
      "RoleResponse": {
        "type": "object",
        "properties": { "name": { "type": "string" }, "id": { "type": "string", "format": "uuid" } }
      },
      "UsersRoleResponse": {
        "type": "object",
        "properties": {
          "user": { "$ref": "#/components/schemas/UserDTO" },
          "role": { "$ref": "#/components/schemas/RoleResponse" }
        }
      }
    },
    "securitySchemes": {
      "bearer-key": {
        "type": "http",
        "description": "Bearer token authentication",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
